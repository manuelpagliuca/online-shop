@model List<SubCategory>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Sotto Categorie
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="SubCategory" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Crea Sotto Categoria
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Nome Sotto Categoria
			</th>
			<th>
				Nome Categoria
			</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.Category.Name</td>

				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="SubCategory" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Modifica
						</a>
					</div>
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="SubCategory" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill"></i> Rimuovi
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>

</table>